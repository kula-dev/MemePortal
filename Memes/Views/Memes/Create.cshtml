@model MemesPortal.Models.Memes

@{
    ViewData["Title"] = "Create";
}
<h2>Dodawanie linków</h2>
<h4>Link</h4>
<hr />
@if (ViewBag.MessageMemesAdd != null)
{
    <div class="form-group" style="color:green;">
        @ViewBag.MessageMemesAdd
    </div>
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <img class="img-responsive full-width" id="logoImage" src="Imageinput" alt="Podgląd"
                 style="border:1px ;margin-top:20px; margin-left:120px;" />
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input type="file" id="Imageinput" asp-for="Image" class="form-control" name="Image" 
                    onchange="document.getElementById('logoImage').src = window.URL.createObjectURL(this.files[0])" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-controller="Users" asp-action="Index">Wróc do panelu</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
